<%- if @member_preference.membership.is?(:admin) -%>
  <%= render 'shared/group_admin_alert' %>
<%- end -%>
<div class="span8">
<div style='width:320px;float:left;'>
<h2><%= t('home.index.edit_your_preferences') %></h2>
<%= form_for @member_preference, :html => {:class => 'form-horizontal'} do |f| %>
  <%= f.error_messages %>
    <div style='padding-left:10px;'>
      <div class="control-group">
        <%= f.label t('people.edit.requests_in_my_service_categories'), :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :req_notifications %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label t('people.edit.forum_posts'), :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :forum_notifications %>
      </div>
    </div>
    <div class="form-actions">
        <%= f.submit 'Update', :class => 'btn btn-primary' %><%= waiting_image %>
    </div>
    </div>
<% end %>
</div>
</div>
<%= render :partial => 'shared/minifeed' %>
