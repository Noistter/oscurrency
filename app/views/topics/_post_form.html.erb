  <h3><%= t('topics.show.add_a_new_post').capitalize %></h3>
  <a name="forum_post">
  <%= error_messages_for :post %>

  <%= form_for :post, :url => forum_topic_posts_path(@forum, @topic), :html => {:id => 'new_post', :class => 'form-horizontal'}  do |f| %>
    <div class="control-group">
      <div class="controls">
        <%= f.text_area :body, :rows => 10 %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit t('button_submit'), :class => "btn btn-primary" %>
    </div>
  <% end %>
