<div class="span3">
<h2><%= t('password_resets.edit.header') %></h2>
  <%= form_tag password_reset_path, :method => :put do %>
    <div class="control-group">
      <label for="password", class="control-label"><%= t('sessions.new.password') %></label>
      <div class="controls">
        <%= password_field_tag :password %>
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag t('password_resets.edit.header'), :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
