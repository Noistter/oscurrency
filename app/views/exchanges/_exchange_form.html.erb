  <h2><%= t('exchanges.new.enter_credit_for', :currency => @group.unit.pluralize) %> <%= h @person.display_name %></h2>

  <%= error_messages_for :exchange %>

  <div class="span4">
  <%= form_for :exchange, :url => person_exchanges_path(@person), :html => {:id => 'new_exchange', :class => 'form_horizontal'} do |f| %>
    <%= f.hidden_field :group_id, :value => @group.id %>
    <div class="control-group">
      <%= f.label t('exchanges.new.amount'), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :amount, :size => 2 %>&nbsp;<span class="small"><%= @group.unit %></span>
      </div>
    </div>
    <%= fields_for :req do |r| %>
      <div class="control-group">
        <%= r.label t('exchanges.new.service_provided'), :class => 'control-label' %>
        <div class="controls">
          <%= r.text_field :name, :onclick => "this.value='';" %>
        </div>
      </div>
    <% end %>
    <div class="form-actions">
      <%= f.submit t('button_submit'), :class => 'btn btn-primary' %><%= waiting_image %>
    </div>
  </div>
  <% end %>
